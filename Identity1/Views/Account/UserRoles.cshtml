@model Identity1.Models.SelectUserRolesViewModel

@{
    ViewBag.Title = "Role";
}

<h2>Role przypisane do @Html.DisplayFor(model => model.UserName)</h2>
<hr />

@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserName)
            </div>
        </div>



        <table>
            <tr>
                <th>
                    Wybrane role
                </th>

            </tr>
            @Html.EditorFor(model => model.Roles)
        </table>
        <br />


        <div class="form-group">
            <div class="col-md-10">
                <a class="btn btn-default" style="width:20%" onclick="location.href = '@Url.Action("Index")'">Anuluj </a>
                <input type="submit" style="width:20%" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

