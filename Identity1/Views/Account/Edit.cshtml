@model Identity1.Models.EditUserViewModel

@{
    ViewBag.Title = "Edycja";
}
<div class="container">

    <h2>Edycja użytkownika @Html.DisplayFor(modelItem => modelItem.UserName)</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="col-md-2">
                    <b>Login</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <b>Imię</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <b>Nazwisko</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName)
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <b>  Email</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-default" style="width:30%" onclick="location.href = '@Url.Action("Index")'">Anuluj </a>
                    <input type="submit" style="width:30%" value="Zapisz" class="btn btn-default" />
                </div>
            </div>
        </div>
        
    }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
