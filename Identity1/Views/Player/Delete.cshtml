@model Identity1.Models.Player

@{
    ViewBag.Title = "Usuwanie";
}

<h2>Usuwanie</h2>
<p class="error">@ViewBag.ErrorMessage</p>

<h3>Jesteś pewny że chcesz usunąć dane dotyczące @Html.DisplayFor(model => model.User.FullName)?</h3>
<div>
        <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JoinDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JoinDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a class="btn btn-default" style="width:30%" onclick="location.href = '@Url.Action("Index")'">Anuluj </a>
            <input type="submit" style="width:30%" value="Usuń" class="btn btn-default" /> 
        </div>
    }
</div>
