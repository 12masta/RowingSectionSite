@model Identity1.Models.Training

@{
    ViewBag.Title = "Tworzenie";
}

<h2>Tworzenie treningu</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Name, new { style = "width:20%;" })
                @Html.TextBoxFor(model => model.Name, new { style = "width:79%;" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.TrainingDate, new { style = "width:20%;" })
                @Html.EditorFor(model => model.TrainingDate)
                @Html.ValidationMessageFor(model => model.TrainingDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <a class="btn btn-default" style="width:30%" onclick="location.href = '@Url.Action("Index")'">Anuluj </a>
                <input type="submit" style="width:30%" value="Stwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
